@model IEnumerable<Storehouse.Model.SocialMediaLinks>


<div class="panel panel-default">
    <div class="panel-heading"><div class="panel-title"><h4>@ViewBag.Title</h4></div></div>
    <p>
        &nbsp;&nbsp; @Html.ActionLink("Add Social Media Link", "Add")
    </p>
    @foreach (var item in Model)
    {
        <div class="panel-body">
            <div class="col-xs-5 text-left">
                <br /><br /><b>Name:</b> @item.Name<br />
                <b>Link:</b> @item.Value
            </div>
            <div class="col-xs-5 text-center">
                <br /><br />
                <a href="@(Url.Action("Update", "SocialLinks", new { id = item.Id }))">Update</a>&nbsp;&nbsp;
                <a href="#@string.Concat("includeinhomepage", item.Id)" data-toggle="modal">Delete</a><br />
            </div>

            <div class="modal" id="@string.Concat("includeinhomepage", item.Id)">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this social media link?</p>
                        </div>
                        <div class="modal-footer">
                            <a href="@(Url.Action("Delete", "SocialLinks", new { id = item.Id }))" class="btn btn-primary">Yes</a>
                            <a href="#" data-dismiss="modal" class="btn">No</a>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dalog -->
            </div><!-- /.modal -->
        </div>
    }
</div>
