@model IEnumerable<Storehouse.Model.ContentSliders>


<div class="panel panel-default">
    <div class="panel-heading"><div class="panel-title"><h4>Content Sliders</h4></div></div>
    <p>
        &nbsp;&nbsp; @Html.ActionLink( "Add Slider","Add")
    </p>
    @foreach (var item in Model)
    {
        <div class="panel-body">
            @*<div class="col-xs-4 text-left">
                <br /><br /><b>Title:</b> @item.Title<br />
                <b>Subtitle:</b> @item.Subtitle
            </div>*@
            <div class="col-xs-2 text-left">
                <b>Slide Image</b><br /> <img src="@item.SlideImage" class="img-thumbnail" style="height:100px;width:100px;"> &nbsp;
            </div>
            @*<div class="col-xs-2 text-left">
                <b>Background</b><br /> <img src="@item.SlideBackground" class="img-thumbnail" style="height:100px;width:100px;"><br /><br />
            </div>*@
            <div class="col-xs-2 text-center">
                <br /><br />
                <a href="@(Url.Action("MoveUp", "ContentSliders", new { id = item.Id  }))"><span class="glyphicon glyphicon-arrow-up"></span></a>
                <a href="@(Url.Action("MoveDown", "ContentSliders", new { id = item.Id }))"><span class="glyphicon glyphicon-arrow-down"></span></a><br />
                <a href="@(Url.Action("Update", "ContentSliders", new { id = item.Id }))">Update</a>&nbsp;&nbsp;
                <a href="#deleteSlider" data-toggle="modal">Delete</a><br />
            </div>

            <div class="modal" id="deleteSlider">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this slider?</p>
                        </div>
                        <div class="modal-footer">
                            <a href="@(Url.Action("Delete", "ContentSliders", new { id = item.Id }))" class="btn btn-primary">Yes</a>
                            <a href="#" data-dismiss="modal" class="btn">No</a>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dalog -->
            </div><!-- /.modal -->
        </div>
    }
</div>
