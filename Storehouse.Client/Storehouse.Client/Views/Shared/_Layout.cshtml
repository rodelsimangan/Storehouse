<body id="pageBody">

    <div id="divBoxed" class="container">
        <div class="row-fluid" style="background-color:#ffde7d;">

            <!-- Navigation & Logo-->
            <div id="divHeader" class="headerArea">
                <div class="divPanel" style="padding-top:10px; padding-bottom:10px;">
                    <div class="row-fluid">
                        <div class="span1"></div>
                        <div class="span3">
                            <div id="divLogo" class="pull-left" style="margin-top:5px;">
                                <a href="@(Url.Action("Index","Home"))" id="divSiteTitle">
                                    <!--img src="@*String.Concat(System.Configuration.ConfigurationManager.AppSettings["UploadsPath"], ViewData["HeaderLogo"])*@" style="width:150px; height:50px;" alt="Robinsons Malls"-->
                                    <img src="~/img/Logo.png" style="width:80%; height:80%;" alt="Robinsons Malls"/>
                                    <!--a href="index.html" id="divTagLine">Your Tag Line Here</a-->
                                </a>
                            </div>
                        </div>
                        <div class="span7">
                            <div id="divMenuRight">                                
                                    <div class="pull-left visible-phone visible-tablet" style="max-width:100%;text-align:left;padding-top:20px;">
                                        <button type="button" id="btnPhoneTablet" class="btn-navbar-highlight pull-right" data-toggle="collapse" data-target=".nav-collapse">
                                            <span class="icon-reorder icon-white" style="font-size:30px;"></span>
                                        </button>
                                        
                                    </div>
                                    <div class="navbar">    
                                        <div class="nav-collapse collapse">
                                            <ul class="nav nav-pills ddmenu pull-left">
                                                <li><a href="@(Url.Action("Index","Home"))"><i class="icon-home" style="font-size:20px"></i>&nbsp;HOME</a></li>
                                                <!--li><a href="about.html">About</a></li-->
                                                <li class="dropdown">
                                                    <a href="#" class="dropdown-toggle"><i class="icon-question-sign" style="font-size:20px"></i>&nbsp;LEARN MORE</a>
                                                    <ul class="dropdown-menu">
                                                        @foreach (var item in (IEnumerable<Storehouse.Model.Templates>)ViewData["TemplateList"])
                                                        {
                                                            item.Name = item.Name.ToUpper();

                                                            if (item.Type == "RobinsonsStores")
                                                            {
                                                                <li> <a href="@(Url.Action("RobinsonsStores", "Browse", new { id = item.Id }))">@item.Name</a></li>
                                                            }
                                                            if (item.Type == "Parent")
                                                            {
                                                                <li> <a href="@(Url.Action("Articles", "Browse", new { id = item.Id }))">@item.Name</a></li>
                                                            }
                                                            if (item.Type == "Collapsables")
                                                            {
                                                                <li> <a href="@(Url.Action("Collapsables", "Browse", new { id = item.Id }))">@item.Name</a></li>
                                                            }
                                                            if (item.Type == "Lists")
                                                            {
                                                                <li> <a href="@(Url.Action("Lists", "Browse", new { id = item.Id }))">@item.Name</a></li>
                                                            }
                                                        }
                                                    </ul>
                                                </li>
                                                <!--li> <a href="#" data-toggle="popover" data-placement="bottom" title="Coming Soon!">MY REWARDS</a></li-->
                                                <li> <a href="@(Url.Action("MyRewards", "Browse"))"><i class="icon-gift" style="font-size:20px"></i>&nbsp;MY REWARDS</a></li>
                                                <li> <a href="@(Url.Action("Contact","Home"))"><i class="icon-envelope" style="font-size:16px"></i>&nbsp;CONTACT US</a></li>
                                            </ul>
                                            <div class="pull-left" style="max-width:100%;">
                                                <div class="input-append">
                                                    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                                                    {
                                                        <input class="span9" id="txtSearch" name="txtSearch" size="12" type="text">
                                                        <button style="width:40px;" id="btnSearch" class="btn" type="submit"><img src="../uploads/image/searchs.png" style="height:18px;width:15px;" /></button>
                                                        <a href="@ViewData["FacebookLink"]" style="color:transparent;" target="_blank">&nbsp;<img src="~/img/facebook_circle_color-256.png" style="height:30px;" /></a>
                                                    }

                                                </div>
                                            </div>
                                        </div>                                        
                                    </div>         
                                   
                                                 
                            </div>
                        </div>
                        <div class="span1"></div>
                    </div>
                </div>
            </div>
            <!-- End Navigation & Logo-->

            <!-- Body -->
            @RenderBody()
            <!-- End Body -->

            <!-- Footer -->
            <div id="divFooter" class="footerArea">
                <div class="divPanel footerPanel" style="padding-top:10px; padding-bottom:10px; ">
                    <div class="row-fluid">
                        <div class="span12" style="text-align:justify; margin-top:15px;" >
                            <p class="copyright" style="text-align:center;">
                                Copyright © @DateTime.Today.Year Robinsons Rewards Card. All Rights Reserved. |

                                <a href="@(Url.Action("TermsofUse","Home"))" style="color:#fb8e41"> Terms and Conditions</a> |
                                <a href="@(Url.Action("PrivacyPolicy","Home"))" style="color:#fb8e41"> Privacy Policy</a> |
                                <a href="@(Url.Action("Contact","Home"))" style="color:#fb8e41">Contact Us</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Footer -->
        </div>
    </div>
